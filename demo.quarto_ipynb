      "outputs": []
    },
    {
      "cell_type": "code",
      "metadata": {},
      "source": [
        "# Plot 2: Scatter plot of Poverty vs. Income\n",
        "fig2 = plt.figure()\n",
        "plt.scatter(df['Income'], df['Poverty'], alpha=0.5)\n",
        "plt.title('Poverty vs. Income')\n",
        "plt.xlabel('Median Income')\n",
        "plt.ylabel('Poverty Rate (%)')\n",
        "figures.append(fig2)"
