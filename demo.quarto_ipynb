      "source": [
        "import matplotlib.pyplot as plt\n",
        "figures = []\n",
        "\n",
        "# Plot 1: Histogram of Median Income\n",
        "fig1 = plt.figure()\n",
        "df['Income'].hist(bins=30)\n",
        "plt.title('Distribution of Median Income')\n",
        "plt.xlabel('Median Income')\n",
        "plt.ylabel('Number of Counties')\n",
        "figures.append(fig1)"
      ],
      "id": "b0b777f8",
